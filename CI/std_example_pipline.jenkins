pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')
    }

    stages {
        stage("Build") {
            steps {
                echo "========executing Build========"
                sh '''
                    rm -rf build/
                    mkdir build
                    cd build/
                    cmake ..
                    make
                '''
            }
        }

        stage("Run") {
            steps {
                echo "=========executing Run========="
                sh '''
                cd build/
                ./main
                '''
            }
        }

        stage("Test") {
            steps {
                echo "=============executins Test========"
                sh '''
                    cd tests
                    rm -rf build/
                    mkdir build
                    cd build/
                    cmake ..
                    make
                    ./test
                '''
            }
        }
    }

    post {
        always {
            retry(10) {
                emailext body: 'Test Message',
                subject: 'Test Subject',
                to: 'i.kardanov@wisetech.pro'
            }
        }
        success {
            echo "====Successful Finich========"
        }

        failure {
            echo "======Remove last error commit from GitHub========="
        }
    }
}